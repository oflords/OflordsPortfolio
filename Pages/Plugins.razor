@page "/plugins"

<PageTitle>Plugins</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">My Plugins</MudText>

<MudGrid>
    <MudItem xs="12" sm="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">LordUtils</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>A developer API designed to save time without bloat.</MudText>
                <MudText Typo="Typo.body2">Including easy to use methods for server, chat, player and Discord management, there is no better utils plugin anywhere!</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Default" Href="https://github.com/oflords/LordUtils" Target="_blank" />
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">GunsFFA</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>A free for all arena, but with guns!</MudText>
                <MudText Typo="Typo.body2">In development, check back soon...</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Default" Href="https://github.com/oflords/GunsFFA" Target="_blank" />
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>